{
  "name": "dockord",
  "productName": "Dockord",
  "version": "1.0.1",
  "description": "Le centre de contrôle Discord manquant — Organisez vos messages importants.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.dockord.app",
    "productName": "Dockord",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dockord",
      "runAfterFinish": true
    }
  },
  "author": "Dockord Team",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
