{
  "name": "codechef",
  "productName": "CodeChef",
  "version": "1.0.0",
  "description": "CodeChef - The Local Code Recipe Book",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.codechef.app",
    "productName": "CodeChef",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CodeChef",
      "runAfterFinish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3T6-dsc/CodeChef.git"
  },
  "keywords": [
    "code",
    "snippets",
    "manager",
    "electron",
    "productivity",
    "developer",
    "tools"
  ],
  "author": "CodeChef Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/3T6-dsc/CodeChef/issues"
  },
  "homepage": "https://github.com/3T6-dsc/CodeChef#readme",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}